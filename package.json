{
  "name": "@joshkolenko/inline-html",
  "keywords": [
    "inline",
    "html"
  ],
  "version": "0.4.1",
  "type": "module",
  "description": "Function that takes a path to an html file or an html string and replaces `script` and `link` elements that have the `inline` attribute with the corresponding file contents.",
  "repository": "https://github.com/joshkolenko/inline-html",
  "author": "joshkolenko",
  "license": "ISC",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rm -rf dist & tsc",
    "pack": "npm run build && npm pack",
    "example": "ts-node --esm example/index.ts"
  },
  "dependencies": {
    "esbuild": "^0.16.16",
    "node-html-parser": "^6.1.4",
    "prettier": "^2.8.4",
    "sass": "^1.63.4",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2"
  }
}
